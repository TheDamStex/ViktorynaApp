<Window x:Class="ViktorynaApp.TopResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Топ-20 результатів" Height="550" Width="700" Background="#F0F4FF">

    <Border Margin="20" CornerRadius="15" Background="White" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                       Text="Топ-20 результатів" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Фільтр -->
            <Border Grid.Row="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="10" 
                    Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Розділ:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <ComboBox ItemsSource="{Binding Rozdily}"
                              SelectedItem="{Binding VybranyiRozdil}"
                              Width="150"
                              Height="30"/>

                    <TextBlock Text="Знайдено:" 
                               VerticalAlignment="Center"
                               Margin="20,0,5,0"/>

                    <TextBlock Text="{Binding Rezultaty.Count}" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <TextBlock Text=" результатів" 
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Таблиця результатів -->
            <Border Grid.Row="2" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,0,15">
                <ScrollViewer>
                    <ListView ItemsSource="{Binding Rezultaty}"
                              BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" Width="40" DisplayMemberBinding="{Binding Position}"/>
                                <GridViewColumn Header="Користувач" Width="120" DisplayMemberBinding="{Binding Login}"/>
                                <GridViewColumn Header="Розділ" Width="100" DisplayMemberBinding="{Binding Rozdil}"/>
                                <!-- ИСПРАВЛЕНО: Правильный синтаксис для StringFormat -->
                                <GridViewColumn Header="Результат" Width="80" 
                                                DisplayMemberBinding="{Binding RezultatText}"/>
                                <GridViewColumn Header="Дата" Width="130" DisplayMemberBinding="{Binding DataVykonannia}"/>
                            </GridView>
                        </ListView.View>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Height" Value="30"/>
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="#FFFDE7"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="2">
                                        <Setter Property="Background" Value="#FFECB3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </ScrollViewer>
            </Border>

            <!-- Кнопка -->
            <Button Grid.Row="3"
                    Content="Назад" 
                    Height="35" 
                    Width="120"
                    HorizontalAlignment="Center"
                    Click="Back_Click"/>
        </Grid>
    </Border>
</Window>
