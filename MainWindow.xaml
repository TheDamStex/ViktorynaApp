<Window x:Class="ViktorynaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="400" Width="450" Background="#F0F4FF">

    <Border Margin="30" CornerRadius="15" Background="White" Padding="20">
        <StackPanel>

            <TextBlock Text="Вікторина" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Логін"/>
            <TextBox x:Name="LoginBox" Height="30"/>

            <TextBlock Text="Пароль" Margin="0,10,0,0"/>
            <PasswordBox x:Name="ParolBox" Height="30"/>

            <Button Content="Увійти" Height="40" Margin="0,15,0,0" Click="Login_Click"/>
            <Button Content="Реєстрація" Height="35" Margin="0,5,0,0" Click="Register_Click"/>

        </StackPanel>
    </Border>
</Window>
