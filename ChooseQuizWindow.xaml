<Window x:Class="ViktorynaApp.ChooseQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вибір вікторини" Height="500" Width="500" Background="#F0F4FF">

    <Border Margin="30" CornerRadius="15" Background="White" Padding="20">
        <StackPanel>
            <TextBlock Text="Оберіть категорію вікторини" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <ListBox x:Name="CategoriesList" 
                     Height="250" 
                     Margin="0,0,0,20">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontSize="16" 
                                   Padding="10,5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Почати вікторину" 
                    Height="40" 
                    Click="StartQuiz_Click"/>

            <Button Content="Назад" 
                    Height="35" 
                    Margin="0,10,0,0" 
                    Click="Back_Click"/>

        </StackPanel>
    </Border>
</Window>