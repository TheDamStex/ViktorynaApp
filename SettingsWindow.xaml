<Window x:Class="ViktorynaApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Налаштування" Height="550" Width="500" Background="#F0F4FF">

    <Border Margin="20" CornerRadius="15" Background="White" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Налаштування користувача" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Зміна пароля -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Зміна пароля" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Старий пароль"/>
                        <PasswordBox x:Name="StaryiParolBox" 
                                     Height="30" 
                                     Margin="0,0,0,10"/>

                        <TextBlock Text="Новий пароль"/>
                        <PasswordBox x:Name="NovyiParolBox" 
                                     Height="30" 
                                     Margin="0,0,0,10"/>

                        <TextBlock Text="Підтвердження пароля"/>
                        <PasswordBox x:Name="PidtverdzhenniaParolBox" 
                                     Height="30" 
                                     Margin="0,0,0,10"/>

                        <Button Content="Змінити пароль" 
                                Height="35" 
                                Command="{Binding ZminytyParolCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Зміна дати народження -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Зміна дати народження" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Поточна дата народження"/>
                        <TextBlock Text="{Binding DataNarodzhennia}" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Нова дата народження (дд.мм.рррр)"/>
                        <TextBox Text="{Binding DataNarodzhennia, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30" 
                                 Margin="0,0,0,10"/>

                        <Button Content="Змінити дату" 
                                Height="35" 
                                Command="{Binding ZminytyDatuCommand}"/>
                    </StackPanel>
                </Border>

                <!-- Статусне повідомлення (без конвертера) -->
                <Border x:Name="StatusBorder" 
                        CornerRadius="8" 
                        Padding="10" 
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <TextBlock x:Name="StatusText" 
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                </Border>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Повернутися до меню" 
                            Height="35" 
                            Width="200"
                            Command="{Binding PovternutyCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>