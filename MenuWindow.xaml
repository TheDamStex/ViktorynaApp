<Window x:Class="ViktorynaApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню" Height="550" Width="600" Background="#F0F4FF">

    <Border Margin="30" CornerRadius="15" Background="White" Padding="20">
        <StackPanel>
            <TextBlock Text="Меню користувача" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Вітаємо," FontSize="18"/>
            <TextBlock x:Name="WelcomeText" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="Нова вікторина" 
                    Height="40" 
                    Margin="0,10,0,5" 
                    Click="StartQuiz_Click"/>

            <Button Content="Мої результати" 
                    Height="40" 
                    Margin="0,5,0,5" 
                    Click="MyResults_Click"/>

            <Button Content="Топ-20 результатів" 
                    Height="40" 
                    Margin="0,5,0,5" 
                    Click="TopResults_Click"/>

            <Button Content="Налаштування" 
                    Height="40" 
                    Margin="0,5,0,5" 
                    Click="Settings_Click"/>

            <Button Content="Вийти" 
                    Height="40" 
                    Margin="0,20,0,0" 
                    Click="Logout_Click"
                    Background="#FFE0E0"/>

        </StackPanel>
    </Border>
</Window>